@using PROG7312_Web_App.Models
@model List<ServiceRequest>

@{
    ViewData["Title"] = "All Service Requests";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">All Service Requests</h1>
        <a asp-action="NewServiceRequest" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle-fill me-2"></i>Report New Fault
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body p-4">
            <h5 class="card-title">Check Your Request Status</h5>
            <p class="card-text">Enter your unique Request ID to see its current status.</p>
            <form hx-get="/ServiceRequest/SearchRequests"
                  hx-target="#request-list-container"
                  hx-swap="innerHTML"
                  class="row g-3">
                <div class="col-md-9">
                    <label for="id" class="visually-hidden">Request ID</label>
                    <input type="text" name="id" id="id" class="form-control form-control-lg" placeholder="Enter your Request ID (e.g., 8f4b1c7c-...)">
                </div>
                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-dark btn-lg">
                        <span class="htmx-indicator">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            Loading...
                        </span>
                        <span class="htmx-no-indicator">Check Status</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div id="request-list-container">
        @await Html.PartialAsync("_ServiceRequestTable", Model)
    </div>

</div>

<div class="modal fade" id="serviceRequestModal" tabindex="-1" aria-labelledby="serviceRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-white" style="background:#3d3d3d;">
                <h1 class="modal-title fs-4" id="serviceRequestModalLabel">Service Request Details</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="serviceRequestModalBody">
                <div class="text-center p-4">
                    <div class="spinner-border text-dark" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading details...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-dark" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            var modalElement = document.getElementById('serviceRequestModal');
            modalElement._modal = new bootstrap.Modal(modalElement);

            modalElement.addEventListener('hidden.bs.modal', function () {
                var modalBody = document.getElementById('serviceRequestModalBody');
                modalBody.innerHTML = '<div class="text-center p-4"><div class="spinner-border text-dark" role="status"><span class="visually-hidden">Loading...</span></div><p class="mt-2">Loading details...</p></div>';
            });
        });
    </script>
}