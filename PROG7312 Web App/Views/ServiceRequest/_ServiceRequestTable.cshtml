@using PROG7312_Web_App.Models
@model List<ServiceRequest>

@{
    string GetStatusBadgeClass(ServiceRequestStatus status)
    {
        return status switch
        {
            ServiceRequestStatus.PendingApproval => "text-bg-warning",
            ServiceRequestStatus.Approved => "text-bg-primary",
            ServiceRequestStatus.InProgress => "text-bg-info",
            ServiceRequestStatus.Complete => "text-bg-success",
            ServiceRequestStatus.Declined => "text-bg-danger",
            _ => "text-bg-secondary"
        };
    }
}

@if (Model == null || Model.Count == 0)
{
    <div class="text-center p-5 border rounded-3 bg-light">
        <i class="bi bi-search" style="font-size: 3rem;"></i>
        <h3 class="mt-3">No Service Request Found</h3>
        <p class="lead text-muted">We couldn't find a request with that ID. Try searching again, or clear the search to see all requests.</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="my-3">Submitted Requests</h4>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" class="ps-3 fs-5">Category</th>
                        <th scope="col" class="fs-5">Status</th>
                        <th scope="col" class="fs-5">Submitted By</th>
                        <th scope="col" class="fs-5">Submitted Date</th>
                        <th scope="col" class="text-end pe-3 fs-5">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3"><strong>@item.Category.</strong></td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status)" style="font-size: 0.9rem;">
                                    @item.Status.ToString()
                                </span>
                            </td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.DateOfSubmission.ToString("dd MMM yyyy")</td>
                            <td class="text-end pe-3">
                                <button class="btn btn-outline-dark btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#serviceRequestModal"
                                        hx-get="@Url.Action("ViewServiceRequestStatus", "ServiceRequest", new { id = item.Id })"
                                        hx-target="#serviceRequestModalBody"
                                        hx-swap="innerHTML">
                                    View Details
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}