@using PROG7312_Web_App.ViewModels;
@model HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<section class="hero" id="hero">
    <div class="hero-background">
        <img src="~/images/CapeTown2.jpg" alt="Image of Cape Town" data-aos-duration="1000">
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <div class="hero-card">
                    <h1 class="display-5 fw-normal">Cape Town Municipal Services</h1>
                    <p class="text-opacity-75 mt-4 me-5 fw-normal fs-5">Track and report issues in Cape Town with ease. Submit service requests, report public concerns, and stay informed on the city's progress—all in one place.</p>
                    <form asp-fragment="services">
                        <button class="btn mt-5 btn-hero">
                            Explore our Features
                            <i class="bi ms-2 bi-arrow-right-circle"></i>
                        </button>
                    </form>
                </div>
            </div>

            <div class="col me-auto">
                <div class="hero-stats-wrapper">
                    <div class="hero-stats">
                        <div class="data">73</div>
                        <div class="data-title">Reports in Progress</div>
                    </div>
                </div>
                <form class="hero-stats-wrapper pt-4" asp-controller="Report" asp-action="CreateReport">
                    <button class="btn btn-hero-stats">
                        Want to Report Something?
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-flag fs-1"></i>
                    <p class="fs-5">
                        Report Issues
                    </p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-calendar-date fs-1"></i>
                    <p class="fs-5">Local Events</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-megaphone fs-1"></i>
                    <p class="fs-5">Announcements</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-clock fs-1"></i>
                    <p class="fs-5">Service Request Status</p>
                </div>
            </div>
        </div>
    </div>

</section>

<div class="recently-viewed">
    <div class="container-fluid">
        <div class="container">
            @if (Model.RecentlyViewedPosts != null && Model.RecentlyViewedPosts.Any())
            {
                <div class="text-center">
                    <h3 class="text-white fw-light mb-3">
                        <i class="bi bi-clock-history me-2"></i> Recently Viewed
                    </h3>
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        @foreach (var post in Model.RecentlyViewedPosts)
                        {
                            <a href="#" class="btn btn-light p-2 recently-viewed-link" data-post-id="@post.Id">
                                @(post.Title.Length > 30 ? post.Title.Substring(0, 30) + "..." : post.Title)
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<section class="news-section" id="news">
    <div class="container d-flex justify-content-center mt-5">
        <h1 class="display-5">Local News & Announcements</h1>
    </div>
    <div class="container my-5">
        <div class="row row-cols-1 row-cols-md-2 g-4">

            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                @foreach (var post in Model.RecentPosts)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header text-white p-3 d-flex justify-content-between align-items-center" style="background:#3d3d3d;">
                                <h5 class="mb-0 text-truncate">@post.Title</h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-text flex-grow-1">@post.Description</p>
                                <a asp-controller="Post" asp-action="ViewPosts" class="btn btn-outline-primary align-self-start mt-3">Read More</a>
                            </div>
                            <div class="card-footer text-muted" style="font-size: 0.9rem;">
                                Published: @post.DatePublished.ToString("dd MMMM yyyy")
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No recent posts are available at the moment.</p>
                </div>
            }
        </div>
    </div>
</section>

@if (Model.RecommendedPosts != null && Model.RecommendedPosts.Any())
{
    <section class="recommendations-section bg-light py-5">
        <div class="container">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-star-fill fs-2 text-warning me-3"></i>
                <h2 class="display-5 mb-0">Recommended @Model.RecommendationReason</h2>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var post in Model.RecommendedPosts)
                {
                    <div class="col">
                        <div class="card h-100 post-card view-post-details" data-post-id="@post.Id">
                            <div class="card-body fs-5">
                                <h4 class="card-title mb-4">@post.Title</h4>
                                <p class="card-text mb-3 text-muted">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    @(post.StartTime.HasValue? post.StartTime.Value.ToString("dd MMM yyyy") : "TBC")
                                </p>
                                <p class="card-text text-muted">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    @(post.Location ?? "TBA")
                                </p>
                            </div>
                            <div class="card-footer bg-transparent my-2 border-0">
                                <span class="badge bg-primary p-2 fw-normal fs-5">@post.Category?.GetDisplayName()</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<div class="modal fade" id="postDetailModal" tabindex="-1" aria-labelledby="postDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-4" id="postDetailModalLabel">Post Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


