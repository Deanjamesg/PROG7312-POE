@using PROG7312_Web_App.ViewModels;
@model HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<section class="hero" id="hero">
    <div class="hero-background">
        <img src="~/images/CapeTown2.jpg" alt="Image of Cape Town" data-aos-duration="1000">
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <div class="hero-card">
                    <h1 class="display-5 fw-normal">Cape Town Municipal Services</h1>
                    <p class="text-opacity-75 mt-4 me-5 fw-normal fs-5">Track and report issues in Cape Town with ease. Submit service requests, report public concerns, and stay informed on the city's progress—all in one place.</p>
                    <form asp-fragment="services">
                        <button class="btn mt-5 btn-hero">
                            Explore our Features
                            <i class="bi ms-2 bi-arrow-right-circle"></i>
                        </button>
                    </form>
                </div>
            </div>

            <div class="col me-auto">
                <form class="hero-wrapper pt-4" asp-controller="ServiceRequest" asp-action="NewServiceRequest" method="get">
                    <button class="btn btn-hero-help" type="submit">
                        Request for Services
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-flag fs-1"></i>
                    <p class="fs-5">
                        Report Issues
                    </p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-calendar-date fs-1"></i>
                    <p class="fs-5">Local Events</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-megaphone fs-1"></i>
                    <p class="fs-5">Announcements</p>
                </div>
            </div>
            <div class="col">
                <div class="feature-card">
                    <i class="bi bi-clock fs-1"></i>
                    <p class="fs-5">Service Request Status</p>
                </div>
            </div>
        </div>
    </div>

</section>

@if (Model.RecentlyViewedPosts != null && Model.RecentlyViewedPosts.Any())
{
    <div class="recently-viewed">
        <div class="container-fluid">
            <div class="container">
                <div class="text-center">
                    <h3 class="text-white fw-light mb-4">
                        <i class="bi bi-clock-history me-3"></i>You Recently Viewed
                    </h3>
                </div>

                <div class="text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        @foreach (var post in Model.RecentlyViewedPosts)
                        {
                            <a href="#" class="btn btn-light p-2 recently-viewed-link" data-post-id="@post.Id">
                                @(post.Title.Length > 30 ? post.Title.Substring(0, 30) + "..." : post.Title)
                            </a>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<section class="news-section" id="news">
    <div class="container pt-4 mb-4">
        <h1 class="display-5 fw-medium">News</h1>
        <h4>Local Events & Announcements</h4>
    </div>
    <div class="container pb-5">
        <div class="row row-cols-1 row-cols-md-2 g-4">

            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                @foreach (var post in Model.RecentPosts)
                {
                    <div class="col">
                        <div class="card post-card h-100">
                            <div class="card-header text-white p-3 d-flex justify-content-between align-items-center" style="background:var(--logo-blue);">
                                <h5 class="mb-0 text-truncate">@post.Title</h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-text flex-grow-1">@post.Description</p>
                                <div class="d-flex flex-row justify-content-between align-items-end">
                                    <a asp-controller="Post" asp-action="ViewPosts" class="btn btn-outline-primary align-self-start mt-3">Read More</a>
                                    <div class="text-muted" style="font-size: 0.9rem;">
                                        Published: @post.DatePublished.ToString("dd MMMM yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No recent posts are available at the moment.</p>
                </div>
            }
        </div>
    </div>
</section>

@if (Model.RecommendedPosts != null && Model.RecommendedPosts.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="d-flex align-items-center mb-5">
                <i class="bi bi-star-fill fs-2 me-3" style="color: var(--logo-pink);"></i>
                <h2 class="display-6 fs-2 mb-0">Recommended @Model.RecommendationReason</h2>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var post in Model.RecommendedPosts)
                {
                    <div class="col">
                        <div class="card h-100 post-card view-post-details" data-post-id="@post.Id">
                            <div class="card-body">
                                <h4 class="card-title fs-5 mb-4">@post.Title</h4>
                                <p class="card-text fs-6 mb-3 text-muted">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    @(post.StartDate.HasValue? post.StartDate.Value.ToString("dd MMM yyyy") : "TBC")
                                </p>
                                <p class="card-text fs-6 text-muted">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    @(post.Location ?? "TBA")
                                </p>
                            </div>
                            <div class="card-footer bg-transparent my-2 border-0">
                                <span class="badge p-2 fw-normal fs-6" style="background: var(--logo-pink);">@post.EventCategory?.GetDisplayName()</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<div class="modal fade" id="postDetailModal" tabindex="-1" aria-labelledby="postDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-4" id="postDetailModalLabel">Post Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<section class="municipal-services" id="services">
    <div class="container services-header">
        <h1 class="display-6 text-white fw-normal border-bottom border-white border-2 pb-3">Online Municipal Services</h1>
        <p class="text-white fs-6 mt-3">
            This platform is designed to improve citizen engagement and streamline service delivery. It provides an efficient way for residents to report issues, access local events, and track their service requests.
        </p>
    </div>

    <div class="container">
        <div class="row my-4">
            <div class="col">
                <div class="service-card">
                    <h2 class="fs-3">Local Events and Announcements</h2>
                    <p style="font-size: 18px;margin-top: 15px;">See what’s happening in your area and get the latest news from the municipality.</p>
                    <form class="ms-auto mt-auto" asp-controller="Post" asp-action="ViewPosts">
                        <button type="submit" class="btn fs-6 p-2" style="background: var(--logo-orange); color:black;">View</button>
                    </form>
                </div>
            </div>
            <div class="col">
                <div class="service-card">
                    <h2 class="fs-3">Request Municipal Services</h2>
                    <p style="font-size: 18px;margin-top: 15px">Easily ask for municipal help for various needs, all in one place.</p>
                    <form class="ms-auto mt-auto" asp-controller="Post" asp-action="ViewPosts">
                        <button class="btn fs-6 p-2" style="background: var(--logo-pink); color:white;">Request Services</button>
                    </form>

                </div>
            </div>
            <div class="col">
                <div class="service-card">
                    <h2 class="fs-3">
                        Status of Service Requests
                    </h2>
                    <p style="font-size: 18px;margin-top: 15px;">Keep tabs on your requests and see their progress from start to finish. </p>
                    <button class="btn fs-6 p-2 ms-auto mt-auto" style="background: var(--logo-blue); color:white;">View Request Status</button>
                </div>
            </div>
            <div class="col">
                <div class="service-card">
                    <h2 class="fs-3">Report Issues</h2>
                    <p style="font-size: 18px; margin-top: 15px;">Quickly report problems like potholes or power outages to the right municipal department.</p>
                    <form class="ms-auto mt-auto" asp-controller="Report" asp-action="CreateReport">
                        <button type="submit" class="btn fs-6 p-2" style="background: var(--logo-yellow); color:black;">Report Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="contact" id="contact">
    <div class="container mt-5 d-flex flex-row">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3310.7780657581266!2d18.428810200000004!3d-33.921111100000005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc5d89ebbfffff%3A0x607472ea9e6a0724!2sCape%20Town%20Civic%20Centre!5e0!3m2!1sen!2sza!4v1757440800391!5m2!1sen!2sza"
                width="900"
                height="500"
                style="border-radius: .75rem; border: 2px solid rgba(0,0,0,0.5);"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
        </iframe>
        <div class="container ms-5">
            <h1 class="display-3 fs-1 fw-normal">Contact</h1>
            <p class="fs-6">Need to contact us? Provided below are all our contact details.</p>
            <div class="mt-4 fs-6">
                <span class="fw-bold">Address: </span>
                <span class="ms-1 d-inline-block">Civic Centre, 12 Hertzog Blvd, Foreshore, Cape Town, 8001</span>
            </div>
            <div class="mt-3 fs-6">
                <span class="fw-bold">Email: </span>
                <span class="ms-1 d-inline-block">contact.us@capetown.gov.za</span>
            </div>
            <div class="mt-3 fs-6">
                <span class="fw-bold">Phone Number: </span>
                <span class="ms-1 d-inline-block">0860 103 089</span>
            </div>
            <div class="mt-4 fs-6">
                <p class="fs-5 fw-bold">Open Times:</p>
                <p><span class="fw-bold">Monday to Friday:</span> 07:00 - 21:00</p>
                <p><span class="fw-bold">Saturdays:</span> 08:00 - 14:00</p>
                <p><span class="fw-bold">Sundays and Public Holidays:</span> 09:00 - 13:00</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.recently-viewed-link').on('click', function(e) {
                e.preventDefault();
                const postId = $(this).data('post-id');
                const url = '@Url.Action("ViewPosts", "Post")' + '?postId=' + postId;
                window.location.href = url;
            });

            $('.recommendations-section').on('click', '.view-post-details', function () {
                const postId = $(this).data('post-id');
                const modal = new bootstrap.Modal(document.getElementById('postDetailModal'));
                const modalBody = $('#postDetailModal .modal-body');
                const modalTitle = $('#postDetailModalLabel');
                modalBody.html('<div class="d-flex justify-content-center p-5"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>');
                modalTitle.text('Loading Details...');
                modal.show();
                $.ajax({
                    url: '@Url.Action("GetPostDetails", "Post")',
                    type: 'GET',
                    data: { id: postId },
                    success: function (result) {
                        modalBody.html(result);
                        modalTitle.text('Post Details');
                    },
                    error: function () {
                        modalBody.html('<p class="text-danger">Sorry, an error occurred.</p>');
                    }
                });
            });
        });
    </script>
}